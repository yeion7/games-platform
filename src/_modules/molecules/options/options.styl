// options styles
$option
  padding .7em
  margin 0 .5em
  cursor pointer
  color $color2
  background $color3
  border-radius 50%
  &:hover
    color $color3
    background $color2
    border 1px solid $color3

.game
  &-options
    width 100%
    height 70px
    display flex
    justify-content center
    align-items center
    margin-top 10px


    &-reload
    &-check
      @extend $option

    &-check
      background $color4
      &:hover
        color $color4
        background $color2
        border 1px solid $color4
