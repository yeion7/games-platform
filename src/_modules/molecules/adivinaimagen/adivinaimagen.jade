include ../../atoms/pista/pista.jade
include ../../atoms/respuesta/respuesta.jade

mixin adivinaimagen(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  div(class=spec.__class)&attributes(attributes)
    div(class="game-card-title titleJuego3")
      div(class="adivinaImange_label")
    div(class="game-card-body")
      +pista()
    
      div(class="game-card-body-pregunta")
          img(src="http://lorempixel.com/200/200/", alt="imagen" class="game-card-body-pregunta-imagen")
  
      
      +respuesta()
      
