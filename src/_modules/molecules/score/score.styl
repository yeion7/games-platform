// score styles

@import '../../atoms/timer/timer.styl';


.game
  &-score
    width 100%
    height 70px
    display flex
    justify-content space-between
    align-items center
    margin-bottom 10px
    color $color2

    &-stars
    &-coin
      display flex
      align-items center

    & i
    & img
      margin-right 5px
    & span
      font-size 1.2em
      font-weight 600
